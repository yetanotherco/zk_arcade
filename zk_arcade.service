[Unit]
Description=ZkArcade
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/app/zk_arcade/
EnvironmentFile=/home/app/config/.env.zk_arcade
ExecStart=/home/app/zk_arcade/web/_build/prod/rel/zk_arcade/bin/zk_arcade start
Restart=always
RestartSec=1
StartLimitBurst=100
LimitNOFILE=100000

[Install]
WantedBy=multi-user.target
